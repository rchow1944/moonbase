
<div class="container">
  <div class="jumbotron">
    
  </div>
  <main>
    <div class="row">
      <div class="left col-lg-4">
        <div class="photo-left">
          <img class="photo" src="https://images.unsplash.com/photo-1533020897307-5f057b2370ae?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60" alt="Profile image"/>
        </div>
        <h4 class="name"><%= @user.display_name%></h4>
        <p class="info">Name: <%= @user.to_s %></p>
        
        <p class="info">Email: <%= @user.email%></p>
        <div class="stats row">
          <div class="stat col-xs-4" style="padding-right: 50px;">
            <p class="number-stat"><%= @user.moons.count%></p>
            <p class="desc-stat">Moons</p>
          </div>
          <div class="stat col-xs-4">
              <p class="number-stat"><%= @user.get_planet_count %></p>
              <p class="desc-stat">Planets</p>
          </div>
        </div>
        <div class="row">
          <div class="edit-button in-line">
            <%= link_to "Edit", "/home/users/#{@user.id}/edit", class: "btn btn-primary"%>
          </div>
          <div class="delete-button in-line">
            <%= link_to "Delete", "/home/users/#{@user.id}", method: :delete, class: "btn btn-danger"%>
          </div>
        </div>
      </div>
      <div class="right col-lg-8">
        <ul class="nav">
          <li>Moons</li>
        </ul>
        <div class="row">
       <% @user.moons.each do |moon|%>
           <div class="col-md-4">
               <div class="card gallery">
                       <img class="card-img-top" src= <%= moon.img_url%> alt="Card image cap">
                       <div class="card-body">
                           <h5 class="card-title"><%=moon.name %>: </h5>

                           <p class="card-text">
                               <li>Size: <%= moon.size %></li>
                           </p>
                           <div class="in-line">
                               <a href="/home/moons/<%=moon.id%>" class="btn btn-primary">View</a>
                           </div>
                           <div class="sell-planet in-line">
                               <%= form_tag("/home/users/#{@user.id}/unclaim/#{moon.id}", method: :patch) do |f| %>
                                   <%= submit_tag "Unclaim", class: "btn btn-danger"%>
                               <%end%>
                           </div>
                       </div>
               </div>
           </div>
       <%end if @user.moons%>
   </div>
      </div>
  </main>
</div>