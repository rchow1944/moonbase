<div class="container-fluid">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign In</h5>
            <%= form_tag "/home/login", class: "form-signin" do %>
              <div class="form-label-group">
                <%= email_field_tag :email, "", id:"inputEmail", class:"form-control", placeholder: "Email Address"%>
                <label for="inputEmail">Email Address</label>
              </div>

              <div class="form-label-group">
                <%= password_field_tag :password, "", id:"inputPassword", class:"form-control", placeholder:"Password" %>
                <label for="inputPassword">Password</label>
              </div>
              <%= submit_tag "Sign In", class:"btn btn-lg btn-primary btn-block text-uppercase"%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
