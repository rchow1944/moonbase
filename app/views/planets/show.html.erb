<div class="planet-img">
    <img src=<%= @planet.img_url %> alt="planet img url" height="200" width="200">
</div>

<div class="planet-info">
    <h1><%= @planet.name %></h1>
    <p>@planet.size</p>
    <p>@planet.distance</p>
</div>

<% @planet.moons.each do |moon|%>
        <li><%= link_to moon.name, moon_path(moon)%></li>
<%end if @planet.moons %>